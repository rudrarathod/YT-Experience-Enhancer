{
    "manifest_version": 3,
    "name": "YouTube Miniplayer & Picture-in-Picture Extension",
    "version": "1.1",
    "description": "Adds custom miniplayer and picture-in-picture buttons to YouTube.",
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}